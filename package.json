{
  "name": "TCG",
  "version": "1.0.0",
  "description": "A web-based two-player trading card game featuring a unique consumption mechanic where predator creatures gain power by consuming prey.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "format": "prettier --write \"js/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"js/**/*.js\" \"tests/**/*.js\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Godeaux/TCG.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Godeaux/TCG/issues"
  },
  "homepage": "https://github.com/Godeaux/TCG#readme",
  "lint-staged": {
    "js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.js": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "vitest": "^4.0.17"
  }
}
